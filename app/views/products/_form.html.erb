<%= form_with model: product, html: { multipart: true } do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.number_field :price, step: 0.01 %>

  <%= f.label :condition %>
  <%= f.select :condition, ["Novo", "Usado - bom", "Usado - regular"] %>

  <%= f.label :images, "Imagens do produto" %>
  <%= f.file_field :images, multiple: true %>

  <%= f.submit %>
<% end %>
