<h1>Meus Produtos</h1>

<% if @products.any? %>
  <ul class="list-unstyled">
    <% @products.each do |product| %>
      <li class="mb-3 d-flex align-items-center">

        <% if product.images.attached? %>
          <%= image_tag product.images.first.variant(resize_to_limit: [100, 100]),
                        class: "me-3 rounded",
                        alt: product.title %>
        <% end %>

        <div>
          <strong>
            <%= link_to product.title, product %>
          </strong>
          <br>
          R$ <%= product.price %>
          <br>

          <%= link_to "Editar", edit_product_path(product), class: "me-2" %>

          <%= link_to "Excluir",
                      product,
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: "Tem certeza?"
                      } %>
        </div>

      </li>
    <% end %>
  </ul>
<% else %>
  <p>Você ainda não cadastrou nenhum produto.</p>
<% end %>

<%= link_to "Novo Produto", new_product_path, class: "btn btn-primary mt-3" %>
